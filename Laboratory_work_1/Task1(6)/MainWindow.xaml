<Window x:Class="NumberInputApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод вещественных чисел" Height="200" Width="400" Loaded="Window_Loaded">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Введите вещественное число:" 
                      FontSize="14" 
                      Margin="0,0,0,10"/>
            <TextBox x:Name="NumberTextBox" 
                    Height="30" 
                    FontSize="14"
                    Padding="5"
                    TextChanged="NumberTextBox_TextChanged"/>
            <TextBlock x:Name="ValidationText" 
                      FontSize="12" 
                      Margin="0,10,0,0"
                      Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>